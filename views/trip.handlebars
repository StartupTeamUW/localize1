<div class="content container">
    {{!-- added UserId for testing --}}
    <div id="wrapper3">
        <input type="number" id="UserId" placeholder="UserId" />
    </div>
    {{!-- ends --}}
    <div>
        <div class="form-group">
            <label for="category">Who is posting</label>
            <select class="custom-select" id="author">
            </select>
        </div>
        <div class="input-group">
            <input type="hidden" name="search_param" value="all" id="search_param">
            <input type="search" id="address" autocomplete="on" class="form-control address" placeholder="Destination"
                style="padding-left: 8px; margin: 0; right: 2px" />
        </div>
    </div>
    <div id="wrapper1" class="col s5 offset-s1 input-field">
        <input type="date" id="startDate" class="datepicker-start" />
        <label for="startDate"></label>
    </div>
    <div id="wrapper2" class="col s5 input-field">
        <input type="date" id="endDate" class="datepicker-end" />
        <label for="endDate"></label>
    </div>
    <div>
        <label for="trip-remark">Trip Remarks</label>
        <textarea class="form-control" id="trip-remark" aria-describedby="trip-description" placeholder="Enter Trip Description"></textarea>
    </div>

    <div>
        <label for="trip-remark">Travel Interests</label>
        <textarea class="form-control" id="interests" aria-describedby="trip-description" placeholder="Enter Trip Interests" name="interests"></textarea>
    </div>


