{{!-- TRIP HANDLEBARS WITHOUT MODELS --}}
<div class="content container">
    <div class="row">
        <div id="wrapper1" class="col s5 offset-s1 input-field">
            <input type="date" id="start1" class="datepicker-start" />
            <label for="start1"></label>
        </div>
        <div id="wrapper2" class="col s5 input-field">
            <input type="date" id="end1" class="datepicker-end" />
            <label for="end1"></label>
        </div>
    </div>
    <form class="clearfix mb-4" action="POST">
        <div class="form-group">
            <label for="city-name">City</label>
            <input type="text" id="city-text" class="form-control" aria-describedby="trip-text" placeholder="Enter City Name">
        </div>
        <div class="form-group">
            <label for="trip-description">Trip description</label>
            <textarea class="form-control" id="trip-description" aria-describedby="trip-description" placeholder="Enter Trip Description"></textarea>
        </div>
        <button id="submit" class="btn btn-primary float-right">Submit</button>
    </form>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/trip.js"></script>