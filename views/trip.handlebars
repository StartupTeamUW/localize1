    <div class="row">
        <button id="submitT" class="btn btn-primary float-right">Submit</button>
    </div>
    <h4>{{msg}}</h4>
    <div id="tripList" class="collection">
        {{#each trip}}
        {{> trips/trip-small}}
        {{/each}}
    </div>
