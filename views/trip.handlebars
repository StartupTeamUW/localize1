<h1>{{msg}}</h1>

{{!-- TRIP HANDLEBARS WITHOUT MODELS --}}
<div class="content container">
    <div>
        <label for="destination">Trip Destination</label>
        <input type="text" id="destination" class="form-control" aria-describedby="trip-text" placeholder="Enter City Name">
    </div>
    <div id="wrapper1" class="col s5 offset-s1 input-field">
        <input type="date" id="startDate" class="datepicker-start" />
        <label for="startDate"></label>
    </div>
    <div id="wrapper2" class="col s5 input-field">
        <input type="date" id="endDate" class="datepicker-end" />
        <label for="endDate"></label>
    </div>
    <div>
        <label for="trip-remark">Trip Remarks</label>
        <textarea class="form-control" id="trip-remark" aria-describedby="trip-description" placeholder="Enter Trip Description"></textarea>
    </div>
    <div>
        <label for="trip_interests">Things I would like to do during this trip</label>
        <textarea class="form-control" id="tripInterests" aria-describedby="trip-description" placeholder="Enter Trip Description"></textarea>
    </div>
    <button id="submitT" class="btn btn-primary float-right">Submit</button>
</div>

{{!-- test of trip data --}}
 <h3>Previous Trips:</h3>
<ul id="tripList" class="list-group">
    {{#each trips}}
    <li data-id="{{this.id}}" class="list-group-item">
        <a href="trip/{{this.id}}">{{this.destination}}</a>
        <button class="btn btn-danger float-right delete">ï½˜</button>
    </li>
    {{/each}}
</ul>


