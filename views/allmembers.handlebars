{{> nav/navbar}}
<div class="row">

  <div class="col s12">
    <br><br>
    <p class="center-align">
      <h2>Meet other Localizers</h2>
    </p>
  </div>


  <div class="col s6">View their profile and dont forget to send them an email
    <div class="row">
  
      <ul id="user-list">
        {{#each users}}
        <li data-id="{{this.id}}" class="list-group-item">
          <a href="user/{{this.id}}">
            <div class="trip-summary-container">
              <div class="profile-pic-container">
                <div class="profile-pic">
                  <img src="{{this.profile_pic_url}}" style="float: left;" />
                </div>
              </div>
              <div class="profile-data">
                <h2 class="display-4 profile-name">{{this.user_name}}</h2>
                <h5 class="user-card-city">{{this.hometown}}</h5> <span class="guide-badge blue">Guide</span> <a href="#"><img
                    class="contact" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ0isRu8iqDzjlJJ2SYvDFcF2dReTmEKnP8mqSyAYv8vE98nYuK"
                    alt=""></a>
                <p>{{this.bio}}</p>
              </div>
            </div>
            <br>
            <br>
        </li>
        {{/each}}
      </ul>
      <a href="/">← Back To Home</a>

    </div>
  </div>


  <div class="col s6">View their profile and dont forget to send them an email
