<style>
  body {}
  .trip-summary-container {
    background: rgb(99, 194, 231);
    color: aliceblue;
    padding: 20px;
    height: 100%;
  }
  .profile-pic {
    float: left;
  }
  .profile-name {
    font-family: 'Montserrat Alternates', sans-serif;
    font-weight: 800;
  }
  img {
    border-radius: 50%;
    margin: auto;
    margin-right: 20px;
  }
  .trip-interests {
    list-style: none;
    display: inline;
  }
  .pill {
    background: rgb(116, 218, 252);
    border-radius: 10px;
    margin: 0 16px 0 0;
    padding: 4px 16px;
    display: inline;
    color: white;
    font-family: 'Roboto', sans-serif;
    font-weight: 600;
  }
  .gender {
    background: rgb(139, 252, 116);
  }
  .language {
    background: rgb(252, 116, 161);
  }
  nav .brand-logo {
        color: black;
        font-family: 'Montserrat Alternates', sans-serif;
        font-weight: 800;
        margin-left: 20px;
    }
  h4 {
    font-family: 'Roboto', sans-serif;
    font-weight: lighter;
  }
  p{
    font-family: 'Roboto', sans-serif;
  }
</style>
{{> nav/navbar}}
<br>
<br>
{{!-- BEGIN USER SUMMARY VIEW --}}
<div class="container">
    <div class="trip-summary-container s12 l10">
        <div class="profile-pic">
            <img src="{{user.profile_pic_url}}" style="float: left;" />
        </div>
        <h2 class="display-4 profile-name">{{user.user_name}}</h2>
        <h5>{{user.hometown}}</h5>
        <p class="lead">{{user.bio}}</p>
        <div class="interest-tokens">
            <ul>
                {{#each user_interests}}
                <li class="interests" id="{{this.text}}"> <span class="badge badge-pill badge-primary">{{this.text}}</span></li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
{{!-- END USER SUMMARY VIEW --}}


<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">{{msg}}</h5>
                    <img src="{{user.profile_pic_url}}" style="float: left;" />


                    <p>
                        <strong>ID</strong>: {{user.id}}</p>
                    <p>
                        <p>
                            <strong>User Name</strong>: {{user.user_name}}</p>
                        <p>
                            <strong>Description:</strong> {{user.email}}</p>
                        <p>
                            <strong>Start Date:</strong> {{user.first_name}}</p>
                        <p>
                            <strong>End Date:</strong> {{user.last_name}}</p>
                        <p>
                            <strong>End Date:</strong> {{user.gender}}</p>
                        <p>
                            <strong>End Date:</strong> {{user.hometown}}</p>
                        <p>
                            <strong>End Date:</strong> {{user.bio}}</p>

                        <a href="/">‚Üê Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</div>