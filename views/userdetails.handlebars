        <label for="profile_pic_url" data-error="wrong" data-success="right">Profile Photo URL</label>
        <input type="text"  name="profile_pic_url">

        <label for="gender">Gender</label>
        <input type="text" name="gender">

        <label for="DOB"></label>
        <input type="date" class="datepicker" name="DOB">

        <label for="hometown">Hometown</label>
