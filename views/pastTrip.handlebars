<style>
  body {}

  .trip-summary-container {
    background: rgb(99, 194, 231);
    color: aliceblue;
    padding: 20px;
    height: 100%;
  }

  .profile-pic {
    float: left;
  }

  img {
    border-radius: 50%;
    margin: auto;
    margin-right: 20px;
  }

  .trip-interests {
    list-style: none;
    display: inline;
  }

</style>
<br>
<br>
<br>
<div class="container">
  <div class="trip-summary-container s12 l10">
    <div class="profile-pic">
      <img src="https://www.fillmurray.com/200/200" style="float: left;" />
    </div>
    <h5>{{trip.beginDate}}, {{trip.endDate}}</h5>
    <h2 class="city-name display-4">{{trip.city}}</h1>
    <p class="trip-summary lead">{{trip.summary}}</p>
      <ul>
        {{#each trip_interests}}
        <li class="interests" id="{{this.text}}"> <span class="new badge blue">{{this.text}}</span></li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>